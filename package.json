{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/getodk/web-forms"
  },
  "type": "module",
  "version": "0.0.0",
  "engines": {
    "node": ">=18 <21",
    "yarn": "1.22.19"
  },
  "volta": {
    "node": "20.8.1",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*",
    "vendor-packages/*",
    "scripts"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "test": "turbo run test",
    "build": "turbo run build",
    "types": "turbo run types",
    "bump": "changeset add",
    "format": "prettier -w \"**/*\" --ignore-unknown --cache",
    "lint": "npm-run-all -s -c lint-non-vue lint-vue",
    "lint-non-vue": "eslint . --report-unused-disable-directives --cache",
    "lint-vue": "ESLINT_USE_FLAT_CONFIG=false eslint --config packages/odk-web-forms/vue/.eslintrc.cjs --report-unused-disable-directives --cache \"packages/odk-web-forms/vue/src/**/*.{js,vue}\""
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@eslint/eslintrc": "^2.1.2",
    "@eslint/js": "^8.51.0",
    "@types/eslint__js": "^8.42.1",
    "@types/eslint-config-prettier": "^6.11.1",
    "@types/eslint": "^8.44.4",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint": "^8.51.0",
    "nan": "^2.17.0",
    "node-gyp": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "turbo": "^1.10.15",
    "typescript": "~5.2.2"
  },
  "resolutions": {
    "**/tree-sitter": "^0.20.5"
  }
}
