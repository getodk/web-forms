  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "test": "turbo run test",
    "build": "turbo run build",
    "types": "turbo run types",
